<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEBEB"
    tools:context=".Inventar">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/meniHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textCTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Inventar"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="barinoff"
            app:layout_constraintBottom_toBottomOf="@+id/textArtikal"
            android:src="@drawable/mcg_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textArtikal"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/inventar2">


    <TextView
        android:id="@+id/tv_raf"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text=""
        android:layout_gravity="left"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >


        <Button
            android:id="@+id/skeniraj_btn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:layout_marginLeft="20dp"

            android:text="Skeniraj barkoD" />


        <Button
            android:id="@+id/rucno_btn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:onClick="Rucno"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:text="Unesi Rucno" />
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pom"
                android:textSize="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text=""
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_pom2"
                android:textSize="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:text=""
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_pom3"
                android:textSize="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:text=""
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_naziv"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text=" "
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv02"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="SIFRA ARTIKLA: "
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/tv_articleid"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text=""
            android:layout_toRightOf="@+id/tv02"/>



        <TextView
            android:id="@+id/tv04"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="KOLICINA: "
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/et2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:hint="              "
            android:inputType="number"
            android:layout_marginTop="183dp"
            android:textStyle="bold"
            android:layout_marginLeft="122dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textColorHighlight="@color/black"/>




        <Button
            android:id="@+id/unesi_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:text="Zapisi rezultat"
            android:textColor="#FFFFFF" />




            <Button
                android:id="@+id/pregled_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:onClick="Tabela"
                android:textSize="10sp"
                android:layout_centerHorizontal="true"
                android:text="Pregled rafa"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/kraj_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:textSize="10sp"
                android:onClick="Zavrsi"
                android:layout_centerHorizontal="true"
                android:text="zavrsi raf"
                android:textColor="#FFFFFF" />









    </RelativeLayout>













    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>