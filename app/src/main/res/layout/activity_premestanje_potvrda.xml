<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PremestanjePotvrda">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/meniHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textCTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Premeštanje"
            android:fontFamily="sans-serif-smallcaps"

            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="barinoff"
            app:layout_constraintBottom_toBottomOf="@+id/textArtikal"
            android:src="@drawable/mcg_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textArtikal"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/inventar2">










        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="180dp">

                <TextView
                    android:id="@+id/tv_naziv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="140dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tv01"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="KOD ARTIKLA: "
                        android:layout_gravity="left"/>

                    <TextView
                        android:id="@+id/tv_kod"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="test"
                        android:layout_toRightOf="@+id/tv02"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tv06"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="DOSTUPNO: "
                        android:layout_gravity="left"/>

                    <TextView
                        android:id="@+id/tv_kol"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="test"
                        android:layout_toRightOf="@+id/tv02"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tv02"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="KOLIČINA: "
                        android:layout_gravity="left"/>

                    <EditText
                        android:id="@+id/et_kol"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textSize="18sp"
                        android:hint="              "
                        android:inputType="number"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textColorHighlight="@color/black"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tv03"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="STARI RAF: "
                        android:layout_gravity="left"/>

                    <TextView
                        android:id="@+id/tv_raf"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="test"
                        android:layout_toRightOf="@+id/tv02"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tv04"
                        android:textSize="22sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="NOVI RAF: "
                        android:layout_gravity="left"/>

                    <EditText
                        android:id="@+id/et_raf"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:textSize="18sp"
                        android:hint="              "
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textColorHighlight="@color/black"/>

                </LinearLayout>






            </LinearLayout>







            <Button
                android:id="@+id/potvrdi_btn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="470dp"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:onClick="Potvrdi"
                android:text="POTVRDI"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/nazad_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:onClick="Nazad"
            android:textColor="@color/white"
            android:text="NAZAD"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>