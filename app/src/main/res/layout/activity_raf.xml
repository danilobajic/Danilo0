<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEBEB"
    tools:context=".Raf">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/meniHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textCTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Raf"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="barinoff"
            app:layout_constraintBottom_toBottomOf="@+id/textArtikal"
            android:src="@drawable/mcg_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textArtikal"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/inventar">

        <TextView
            android:id="@+id/tv1"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="" />

        <Button
            android:id="@+id/skeniraj_btn"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:text="skeniraj barkod rafa" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:paddingStart="30dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="" />

        <Button
            android:id="@+id/potvrdi1"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="Potvrdi"
            android:text="POtvrdi" />

           <TextView
               android:id="@+id/tv3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:textSize="20sp"
               android:textStyle="bold"
               android:text="ILI" />

           <EditText
               android:id="@+id/et1"
               android:layout_width="173dp"
               android:layout_height="wrap_content"
               android:hint="       ZAPISI RAF"
               android:textStyle="bold"
               android:layout_marginTop="30dp"
               android:layout_marginBottom="15dp"
               android:textColor="@color/black"
               android:textColorHint="@color/black"
               android:textColorHighlight="@color/black"/>

           <Button
               android:id="@+id/potvrdi2"
               android:layout_width="173dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:onClick="Potvrdi2"
               android:text="POTVRDI" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>